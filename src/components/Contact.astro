<style>
	#contacto {
		padding: 6rem 2rem;
		background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
		color: white;
	}
	.img-tienda img{
		box-shadow:2px 0px 25px black;
		overflow: hidden;
		max-width: 400px;
		border-radius:10px
	}
	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-label {
		color: #e74c3c;
		font-weight: 600;
		text-transform: uppercase;
		font-size: 0.875rem;
		letter-spacing: 1px;
	}

	h2 {
		font-size: 2.5rem;
		margin-top: 1rem;
		line-height: 1.3;
	}

	.subtitle {
		max-width: 700px;
		margin: 1rem auto 0;
		font-size: 1.125rem;
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.9);
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
	}

	.info-section {
		margin-bottom: 2.5rem;
	}

	.info-section h3 {
		font-size: 1.25rem;
		margin-bottom: 1rem;
		color: #e74c3c;
	}

	.phone-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
	}

	.phone-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 8px;
		text-decoration: none;
		color: white;
		transition: all 0.3s ease;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.phone-item:hover {
		background: rgba(255, 255, 255, 0.1);
		transform: translateY(-2px);
	}

	.phone-item svg {
		flex-shrink: 0;
		color: #25d366;
	}

	.email-link {
		color: white;
		text-decoration: none;
		font-size: 1.125rem;
		transition: color 0.3s ease;
	}

	.email-link:hover {
		color: #e74c3c;
	}

	.address, .schedule {
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		margin: 0;
	}

	@media (max-width: 968px) {
		.contact-grid {
			grid-template-columns: 1fr;
		}

		.phone-grid {
			grid-template-columns: 1fr;
		}

		h2 {
			font-size: 2rem;
		}
	}
</style>
