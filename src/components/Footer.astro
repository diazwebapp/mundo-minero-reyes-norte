---
import { fichaTecnica } from "../local-data/ficha-tecnica";
const { informacion_general, datos_contacto, domicilio_fiscal } = fichaTecnica;
---

<footer>
	<div class="footer-container">
		<div class="footer-grid">
			<div class="footer-section">
				<h3>{informacion_general.nombre_corto}</h3>
				<p>
					Especialistas en distribución y comercialización de equipos para la industria minera
					desde 2020.
				</p>
			</div>

			<div class="footer-section">
				<h4>Enlaces Rápidos</h4>
				<ul>
					<li><a href="#nosotros">Nosotros</a></li>
					<li><a href="#productos">Productos</a></li>
					<li><a href="#contacto">Contacto</a></li>
				</ul>
			</div>

			<div class="footer-section">
				<h4>Contacto</h4>
				<ul>
					<li>
						<a href={`https://wa.me/${datos_contacto.telefono_ventas}`}>{datos_contacto.telefono_ventas}</a>
					</li>
					<li><a href={`mailto:${datos_contacto.correo_electronico}`}>{datos_contacto.correo_electronico}</a></li>
					<li>{domicilio_fiscal.direccion}</li>
					<li>{domicilio_fiscal.distrito}, Perú</li>
				</ul>
			</div>

			<div class="footer-section">
				<h4>Horario</h4>
				<p>Lunes - Sábado</p>
				<p>08:00 am - 18:00 pm</p>
			</div>
		</div>

		<div class="footer-bottom">
			<p>&copy; {informacion_general.nombre_corto}. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>
